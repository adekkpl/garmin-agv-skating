<!-- Garmin Aggressive Inline Skating Tracker v2.0.0 -->
<iq:manifest xmlns:iq="http://www.garmin.com/xml/connectiq" version="3">
    <iq:application 
        entry="InlineSkatingApp" 
        id="55ea7db7193c459a90cd15d3a4ff1545" 
        launcherIcon="@Drawables.LauncherIcon" 
        minSdkVersion="4.0.0" 
        name="@Strings.AppName" 
        type="watch-app" 
        version="2.0.0">
        
        <iq:products>
            <!-- Primary target device -->
            <iq:product id="fr965"/>
            <!-- Legacy support -->
            <iq:product id="fenix6pro"/>
            <!-- Additional compatible devices -->
            <iq:product id="fenix7"/>
            <iq:product id="fenix7s"/>
            <iq:product id="fenix7x"/>
            <iq:product id="fr955"/>
            <iq:product id="fr255"/>
        </iq:products>
        
        <iq:permissions>
            <!-- Core permissions for GPS and fitness tracking -->
            <iq:uses-permission id="Positioning"/>
            <iq:uses-permission id="Sensor"/>
            <iq:uses-permission id="SensorLogging"/>
            <iq:uses-permission id="Fit"/>
            
            <!-- Data storage and sync -->
            <iq:uses-permission id="PersistedContent"/>
            <iq:uses-permission id="PersistedLocations"/>
            
            <!-- Connectivity -->
            <iq:uses-permission id="Communications"/>
            <iq:uses-permission id="BluetoothLowEnergy"/>
            <iq:uses-permission id="Ant"/>
            
            <!-- Notifications -->
            <iq:uses-permission id="PushNotification"/>
            
            <!-- Audio feedback (for trick detection alerts) -->
            <iq:uses-permission id="Audio"/>
        </iq:permissions>
        
        <iq:languages>
            <iq:language>eng</iq:language>
            <iq:language>ces</iq:language>
        </iq:languages>
        
        <iq:barrels/>
    </iq:application>
</iq:manifest>